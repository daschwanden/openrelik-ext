{
  "name": "openrelik",
  "displayName": "openrelik",
  "description": "OpenRelik Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "publisher": "OpenRelik",
  "repository": "https://github.com/daschwanden/openrelik-ext",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openrelik",
          "title": "OpenRelik",
          "icon": "media/openrelik.png"
        }
      ]
    },
    "views": {
      "openrelik": [
        {
          "id": "openrelik",
          "name": "OpenRelik",
          "icon": "media/openrelik.png",
          "contextualTitle": "OpenRelik"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "openrelik",
        "contents": "OpenRelik not running [learn more](https://openrelik.org/getting-started/).\n[Start OpenRelik](command:openrelik.startOpenRelik)"
      }
    ],
    "commands": [
      {
        "command": "openrelik.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "openrelik.newWorker",
        "title": "Add new worker"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "node-fetch": "^3.3.2",
    "typescript": "^5.7.2"
  }
}
